page {
    background: #f4f4f4;
}

.cells{ 
  background: #fff;
  margin: 20rpx 0;
}

.cell{
  display: flex;
  justify-content: space-between;
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 40rpx;
  font-size: 32rpx;
  position: relative;
}

.cell::before{ 
  content: '';
  position: absolute;
  width: 100%;
  height: 1px;
  background: #e5e5e5;
}

.cell:first-child::before{
  display: none;
}

.cells-des{
  color: #bbb;
}