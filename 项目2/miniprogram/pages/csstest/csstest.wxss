.page_1{ 
  width:50%;
  height: 30px;
  border: 1px solid  rosybrown;
  position: fixed;
  top: 0;
  left: 0; 
  margin-left: 25%;
  margin-top: 2px;
  border-radius: 5px;
}
.page_1_text{
  width:32.9%;
  height: 30px;
  float: left;
  background-color: #ddd;
  border-right: 1px solid  rosybrown;
  font-size: 12px;
  text-align: center;  
}

.page_1_text:last-child{
  border-right: none;  
  border-top-right-radius: 5px;
  border-bottom-right-radius: 5px;
}
.page_1_text:first-child{ 
  border-top-left-radius: 5px;
  border-bottom-left-radius: 5px;
}

.page_1_text a{
  display: block;  
  padding-top: 7px;
}

.page_1_text:hover{
  background-color: black;
  color: white;
}

.page_1_part1{
  width:50%;
  height: 200px; 
  position: fixed;
  top: 33px;
  margin-left: 25%; 
}

.page_2{
  width:100%;
  height: 200px;
  background-color:#323643;
}

.page_2_head{ 
  height: 30%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.page_2_head_text{
  font-size: 20px;  
 color: white;    
}

.page_2_body{
  height: 50%;
  display: flex;
  justify-content: space-around;
}
.page_2_text image{
  width: 55px;
  height: 55px;
}
.page_2_text_name{
  text-align: center;
  color: white;
}

.page_2_footer{
  height: 20%;
  display: flex;
  justify-content: center;
  align-items: center; 
} 

.page_2_footer_text{ 
  color: white;  
  width: 150px; 
  height: 27px;
  background-color: red;
  border-radius: 20px; 
  text-align: center;  
  line-height: 27px;
} 
