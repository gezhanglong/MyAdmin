.page_3_box{ 
  width:300px;  
  height: 200px;
  border: 1px solid #323643;
  margin: 10px auto;
  border-radius: 10px;
  box-shadow: 2px 2px 5px #ddd; 
}

.page_3_1{
  width:120px;  
  height: 200px;
  background-color: #ff5c55;
  border-radius: 10px 0 0 10px;
  display: flex; 
  flex-direction: column;
  justify-content: space-around;
}

.page_3_1_title{ 
  height: 40px;
  width:120px;  
  font-size: 16px;
  color: white;  
  text-align: center;
  line-height: 40px;
}
.page_3_1_des{
  height:30px;
  width:120px;
  font-size: 12px;
  color: white;  
   text-align: center;
}
.page_3_1_img{ 
  width:120px; 
  height:120px;
  border-radius: 0 0 0 10px; 
}

.page_4{ 
  height: 100px;
  width: 300px;
  background-color: #ddd;  
  display: flex;
  flex-direction: column; 
  flex-wrap: nowrap;
  margin: 0 auto; 
}

.page_scroll{
  width: 900px;
  height: 100px;
}
.page_4_1{ 
  width: 300px; 
  height: 100px;
  float:left;
}
.page_4_1 image{
    width: 55px; 
  height: 55px;
}

.page_4_icon{
  width: 100px;
  height: 15px; 
  position: relative;
  top: -20px;
  margin: 0 auto;
}

.page_4_iconinfo{
  width: 15px;
  height: 15px;
  background-color: #4dd;
  border-radius: 25px;
  float: left;
  margin-left: 15px;
} 

.page_4_bt1{
  width: 150px;
  height: 30px;
  background: green;
  border-radius: 5px;
  line-height: 30px;
  text-align: center;
}
.page_4_bt1_hover{
  box-shadow: 2px 2px 5px #ff5c55;
}

