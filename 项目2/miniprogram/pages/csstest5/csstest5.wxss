.pop{
  position: relative;
  
  width: 100%;
  height: 55%;
  background:linear-gradient(rgba(245, 221, 178,0.8),rgba(187, 171, 142,0.5));
  border-radius: 30rpx 30rpx 0 0rpx;
  transition: top 2s cubic-bezier(0.075, 0.82, 0.165, 1); 
} 

