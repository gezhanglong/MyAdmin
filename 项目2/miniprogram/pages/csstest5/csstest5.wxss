.star{
  position: relative;   
}

.star::after{
content: '';
    position: absolute;  
    height: 4rpx; 
    width: 40rpx;
    transform:  rotateZ(45deg);
    background: linear-gradient(-45deg, rgba(0, 0, 255, 0), #f5f5f7, rgba(0, 0, 255, 0));
     
}

.star::before{
content: '';
    position: absolute;   
    height: 4rpx; 
    width: 40rpx;
    transform: rotateZ(-45deg);
    background: linear-gradient(-45deg, rgba(0, 0, 255, 0), #f5f5f7, rgba(0, 0, 255, 0));
     
}


