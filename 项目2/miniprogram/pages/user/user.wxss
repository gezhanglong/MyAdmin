/* miniprogram/pages/myfirst/myfirst.wxss */
page{ 
  margin: 0;
   padding: 0;
   background-color:#f39c12;
   color: #1a2a3a;
} 

 .info__headurl{ 
   border-bottom: 1px solid #fad0c4;
}  

.info__headurl image{
  width: 150rpx;
  height:150rpx; 
  border-radius: 50%; 
  float: left; 
  margin:12px; 
}
#info__name{ 
  line-height: 200rpx;
  padding-right:80px;
  color: white;
}

.page__ft_text{ 
  font-size: 0.8em;
}


/* button 去掉边框 */

#loginbtn::after {
  border: none; 
}

/* button 去掉背景 */

#loginbtn {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: transparent;
  z-index: 99; 
}


.templet{
   width: 750rpx;
   height: 500rpx; 
   margin-top: 40rpx;
   padding-top: 10rpx;
   display: flex;
   flex-direction: column; 
   align-items: center;   
}

.templet_hover{
  box-shadow: 0rpx 0rpx 50rpx gold;
}

.templetimg{
  width: 600rpx;
  height: 400rpx;
  border-radius: 20rpx; 
  z-index: -1;
}

.templettext{
  width: 600rpx;
  height: 100rpx; 
  line-height: 100rpx;
  text-align: center;  
  border-radius: 20rpx;
  position: relative;
  z-index: -1; 
}


.templettext::after{
  content: ">>";
  position: absolute;  
}


