/* 流星 */

.shootingstar{
  position: relative;
  top: 700rpx;
  left: 30rpx; 
}


.shootingstar_content{
  width: 200rpx;
  height: 6rpx; 
  border-radius:3rpx; 
  background:linear-gradient(to left,white 1%,transparent);  
  animation:  animation_shootingstar 1s linear infinite;
}


 @keyframes animation_shootingstar {
  0% {   
       transform:translate(0,0) rotate(45deg);
  } 
    100% {   
       transform:translate(300rpx,300rpx) rotate(45deg);
  }
}



/* 白天 */

.sun{
  position: relative;
  top: 30rpx;
  left: 50rpx;
 
}

.sun_content{
  position: absolute;
  width: 200rpx;
  height: 200rpx;
  border-radius: 100%;
  background: radial-gradient(white 80%,rgb(233, 202, 27)) ;
  box-shadow: 0 0 20px white, 0 0 60px rgb(243, 219, 6); 
}