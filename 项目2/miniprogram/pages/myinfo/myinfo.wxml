<view class='page'>
  <view class='page__hd'>
    欢迎：{{nickname}}
  </view>
  <view class='page__bd'> 
    <view class='page__bd_updateimg' bindtap='onUpdateimg'>
    上传图片
    <image src='{{imgurl}}'></image>
    <view>{{fileid}}</view>
    </view> 
    <form bindsubmit='onSubmit'>
      <view class='page__bd_title'>
      标题：
      <input name='title' placeholder='请输入标题'></input>
      </view>
      <view class='page__bd_des'> 
      描述：
      <input name='des' placeholder='请输入描述'></input>
      </view>
      <button form-type='submit'>提交</button>
    </form>
  </view>
</view>
