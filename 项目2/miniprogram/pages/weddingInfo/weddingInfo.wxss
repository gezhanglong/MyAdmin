page{
  margin: 0;
  padding: 0;
  font-size: 16px;
  background-color: #cccc;  
}

.list{
  display: flex;
  flex-direction: row;
  justify-content:space-between;
  height: 50px;
  position: relative;
}

.list::before{ 
  content: '';
  width: 100%;
  height: 1px;
  background-color: #5a6a7a;
  position: absolute;
  bottom: 0;
}

.list-headurl{
  width: 40px;
  height: 40px;
  border-radius: 20px;
  margin-top: 5px;
}

.list-item{
  line-height: 50px;
  color: #1a2a3a;
}