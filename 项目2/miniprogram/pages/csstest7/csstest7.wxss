page{
  margin: 0;
  padding: 0;
  
}

 

.page_num_content{
  width: 750rpx;
  height: 100%;
  background-color:#e74c3c; 
  display: flex;
  flex-direction: column;
  justify-content: flex-start;  
} 

/* 第四屏 */
 
.page_4_img {
  position: absolute;
  width: 100%;
  height: 100%;   
}

@keyframes animation_page_4 {
  0% { 
    transform: scale(0,0)
  }

  100% { 
    transform:  scale(1,1);
  }
}
 

@keyframes animation_page_4_left {
  0% {
    transform: translateX(0rpx);
    z-index: 10;
    opacity: 1;
  }

  50% {
    transform: translateX(-1000rpx);
    opacity: 0;
  }

  100% {
    transform: translateX(0rpx);
    z-index: 9;
    opacity: 1;
  }
}

@keyframes animation_page_4_right {
  0% {
    transform: translateX(0rpx);
    z-index: 10;
    opacity: 1;
  }

  50% {
    transform: translateX(1000rpx);
    opacity: 0;
  }

  100% {
    transform: translateX(0rpx);
    z-index: 9;
    opacity: 1;
  }
}

.page_4_left {
  left: 0;
  top: 50%;
  transform: rotate(-90deg);
}

.page_4_right {
  right: 0;
  top: 50%;
  transform: rotate(90deg);
}

.page_4_icon {
  position: absolute;
  z-index: 51;
  width: 80rpx;
  height: 60rpx;
  background-repeat: no-repeat;
  background-position: 50% 95%;
  background-image: url("data:image/png;base64,");
}


/* pop */

.pop_content{
  position: absolute; 
  
  width: 100%;
  height: 100%;
  background:linear-gradient(rgba(245, 221, 178,0.8),rgba(187, 171, 142,0.5));
  
  
} 



@keyframes animation_page_3 {
  0% {top: 100%;} 
  30% {top: 0%;} 
  70% {top: 0%;} 
  100% {top: 100%;}
}
 
 

.page_img { 
  width: 100%;
  height: 100%;    
}



 