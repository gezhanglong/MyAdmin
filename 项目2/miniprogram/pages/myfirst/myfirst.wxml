<view class='page'> 
<image id='bd_image' src='../../images/bd2.jpg' mode='scaleToFill'></image>
  <view class='page__bd'> 
    <view class='info__headurl'>
      <image id='headurl' src='{{headurl}}'></image>
    </view>
    <view class='info__mone'>
      <view wx:if="{{namenick.length>0}}">您好：{{namenick}}</view>
      <button wx:else open-type="getUserInfo" lang="zh_CN" bindgetuserinfo="onGotUserInfo">
        请授权
      </button>
    </view>
    <view class='btn_into' bindtap='onNavigateTo' bindtouchmove='onNindtouchmove'>欢迎来到小嘉文相册>>进入</view>
     <view class='btn_into' bindtap='onNavigateToTemplet1' bindtouchmove='onNindtouchmove'>邀请函模板_1>>进入</view>
    <block wx:if='{{iswedding}}'>
      <view class='btn_into' bindtap='onNavigateToWedding' bindtouchmove='onNindtouchmove'>{{wedding_text}}>>进入</view>
    </block>
      <block wx:else >
       <view class='btn_into' bindtap='onNavigateToWeddingConfig' bindtouchmove='onNindtouchmove'>{{wedding_text}}>>进入</view>
       </block>
  </view>  
</view>
