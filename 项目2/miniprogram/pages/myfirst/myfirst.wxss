}  

/* 风车叶子 */
.leaf_content{
  position: absolute;
  width:0rpx;
  height:0rpx;   
  animation: animation_leaf 3s linear infinite ; 
  
}

 @keyframes animation_leaf {
  0% {  
       
       transform:rotate(0deg);
  } 
    100% {   
       transform:rotate(360deg);
  }
}

.leaf{
  position: absolute;  
  top: -25rpx;
  left:-5rpx; 
  width: 10rpx; 
  height: 50rpx;
  background-color: #9966ff;   
  border-radius: 0 5rpx 5rpx 5rpx;  
}
 

.leaf_1{
  transform:rotate(120deg) translate(0rpx,-20rpx); 
  
}

.leaf_2{
  transform:rotate(240deg) translate(0rpx,-20rpx);   
}

.leaf_3{
  transform:rotate(360deg) translate(0rpx,-20rpx);    
}

