@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "进行中的Trigger列表"; 
}
@using MyProject.Services.MvcPager;
@using MyProject.Matrix.Controllers.Core;
@using MyProject.Services.Extensions;
@model List<MyProject.Core.Entities.QRTZ_FIRED_TRIGGERS>  

<body style="background-color:#F9F9F9;margin-top:0px;"> 
<div class="widget-box" style="margin-top:0;">
          <div class="widget-title"> 
            <h5>Job列表</h5>
          </div>
          <div class="widget-content nopadding">
              <div class="">
                  <div id="DataTables_Table_0_length" class="dataTables_length">
                     @using (Html.BeginForm("FiredTriggersList", "Job", FormMethod.Get))
                        {
                            <table>
                                <tr> 
                                    <td>
                                        <input type="submit" value="刷新" class="btn btn-mini" style="padding: 4px 8px;font-weight:bold;border-radius: 4px;" />
                                         
                                    </td>
                                </tr>
            
                            </table>
                        }
                  </div>

              </div>

            <table class="table table-bordered table-striped"> 
                <thead>
                <tr>
                  <th>ID</th>
                  <th>实例</th>
                  <th>任务调度名称</th>
                  <th>job名称</th>
                  <th>trigger名称</th>
                  <th>触发开始时间</th>  
                  <th>触发时间</th>  
                  <th>优先级</th>
                  <th>状态</th>
                </tr>
              </thead>
              <tbody> 
                  @foreach (var item in Model)
                    {
                        <tr >
                             <td style="text-align:center;"> 
                                @(item.ENTRY_ID)
                            </td>
                            <td style="text-align:center;">
                                @item.INSTANCE_NAME
                            </td>
                            <td style="text-align:center;"> 
                                @(item.SCHED_NAME)
                            </td>
                            <td style="text-align:center;">
                                @item.JOB_NAME
                            </td>
                            <td style="text-align:center;"> 
                                @item.TRIGGER_NAME
                            </td>
                              <td style="text-align:center;"> 
                                @(new DateTime(item.FIRED_TIME).AddHours(8))
                            </td>
                            <td style="text-align:center;"> 
                                @(new DateTime(item.SCHED_TIME).AddHours(8))
                            </td> 
                              <td style="text-align:center;">
                               @item.PRIORITY
                            </td>
                            <td style="text-align:center;">
                               @item.STATE
                            </td> 
                        </tr>
                   }
              </tbody>
            </table>  
          </div> 
        </div> 
</body>   